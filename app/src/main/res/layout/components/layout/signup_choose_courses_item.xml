<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/course_card_view"
    android:layout_width="fill_parent"
    android:layout_height="82dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="0dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding = "16dp"
        android:id="@+id/course_holder_layout"
        android:background="?android:selectableItemBackground"
        android:clickable="true"

        >
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/name_text"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="CS17700" />

            <TextView
                android:id="@+id/title_text"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Problem Solving And Object-Oriented Programming Niuy vySdsdsdsdsdsdsdsds"
                android:ellipsize="marquee"/>

        </LinearLayout>
        <com.hanks.library.AnimateCheckBox
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="16dp"
            app:animDuration="200"
            app:checkedColor="@color/colorAccent"
            app:lineColor="#fff"
            app:lineWidth="1.2dp"
            app:unCheckColor="#e0e0e0"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>