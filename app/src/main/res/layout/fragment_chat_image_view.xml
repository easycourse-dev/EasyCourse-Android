<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout_chat_image"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/chatImageUselessView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/chatImageViewButtonLayout"
        android:layout_alignParentBottom="true"
        android:background="#B3000000" />


    <ImageView
        android:id="@+id/chatImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:layout_above="@+id/chatImageViewButtonLayout"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_marginTop="16dp"/>


    <ProgressBar
        android:id="@+id/chatImageProgressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminate="true" />

    <LinearLayout
        android:id="@+id/chatImageViewButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:padding="5dp"
        android:paddingBottom="16dp">

        <!--TODO: add ripple-->

        <ImageButton
            android:id="@+id/chatImageViewShare"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="@drawable/transparent_button_ripple"
            android:src="@drawable/ic_share_black_24px" />

        <!--<ImageButton-->
            <!--android:id="@+id/chatImageViewForward"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="64dp"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@drawable/transparent_button_ripple"-->
            <!--android:src="@drawable/ic_forward_black_24px" />-->

        <ImageButton
            android:id="@+id/chatImageViewDownload"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:background="@drawable/transparent_button_ripple"
            android:src="@drawable/ic_file_download_black_24px" />

    </LinearLayout>


</RelativeLayout>