<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/course_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="false"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="2dp">

    <RelativeLayout
        android:id="@+id/course_holder_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@color/colorWhiteText"
        android:focusable="false"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:focusable="false"
            android:orientation="vertical">

            <TextView
                android:id="@+id/new_room_course_course_text"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/tempRoomName"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/new_room_course_title_text"
                style="@style/Base.TextAppearance.AppCompat.Caption"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:text="@string/tempCourse"
                android:textColor="@color/colorPrimary" />

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>